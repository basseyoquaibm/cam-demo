                    "label": "Sydney"
                },
                {
                    "value": "eu-de",
                    "label": "Germany"
                }
            ]
        },     
        {
            "name": "domain",           
            "description": "Domain of the virtual instance to be deployed",
            "hidden": false,
            "immutable": false,
            "label": "VM Domain",   
            "required": true,
            "secured": false,
            "type": "string",
            "default": "sample.com"
        },        
        {
            "name": "private_vlan_name",
            "type": "string",
            "description": "Private Virtual network for deployed virtual instances",
            "hidden": false,
            "label": "Private VLAN",
            "secured": false,
            "required": true,
            "immutable": false,
            "default": "lon-public-vlan"
        },
        {
            "name": "public_vlan_name",
            "type": "string",
            "description": "Public Virtual network for deployed virtual instances",
            "hidden": false,
            "label": "Public VLAN",
            "secured": false,
            "required": true,
            "immutable": false,
            "default": "lon-public-vlan"
        },
        {
            "name": "osrefcode",
            "type": "string",
            "description": "Operating system reference code for VMs",
            "hidden": false,
            "label": "Operating System reference code",
            "secured": false,
            "required": true,
            "immutable": false,
            "default": "DEBIAN_8_64"
        },
        {
            "name": "compute_count",
            "type": "string",
            "description": "Number of virtual instances for each type",
            "hidden": false,
            "label": "Number of VMs",
            "secured": false,
            "required": true,
            "immutable": false,
            "default": "1"
        },
        {
            "description": "Public SSH key used to connect to the virtual guest",
            "hidden": false,
            "immutable": false,
            "label": "Public SSH Key",
            "name": "ssh_key",
            "required": true,
            "secured": false,
            "type": "string",
            "regex": "^ssh-rsa AAAA[0-9A-Za-z+/]+[=]{0,3}( [^@]+@[^@]+| [^@]+){0,1}$"
        },
        {
            "description": "Label for the Public SSH key",
            "hidden": false,
            "immutable": false,
            "label": "Public SSH Key Label",
            "name": "ssh_label",
            "required": true,
            "secured": false,
            "type": "string"
        }
    ]
